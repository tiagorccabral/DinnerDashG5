<h1 align ="center" >Log In</h1>

<div class='row' align='center'>
  <div class="login-box">
   <div class='col-xs-12'>
     <div class="login-box-content">
      <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
      <div class="form-group">
        <div class="col-sm-offset-1  col-sm-10">
          <%= f.email_field :email, class: "form-control", placeholder: "Digite seu email", autofocus: true %>
        </div>
      </div><br>
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
          <%= f.password_field :password, class: "form-control", placeholder: "password" , autocomplete: "off" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
          <%= f.submit "Log in", class: 'btn btn-primary', style: "width: 70%" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
          <%= link_to "create account", signup_path, class: 'btn btn-primary', style: "width: 70%" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
          <%= link_to "forget your password", signup_path, class: 'btn btn-primary', style: "width: 70%" %>
        </div>
      </div>
      <% end %>
    </div>
   </div>
 </div>
</div>
