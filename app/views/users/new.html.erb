<h1 align='center'>Sign up</h1>

<%= render 'shared/errors', obj: @user %>

<div class='row'>
   <div class='col-xs-12'>
      <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
         <div class="control-label col-sm-2">
            <%= f.label "Nome Completo" %>
         </div>
         <div class="col-sm-8">
            <%= f.text_field :name, class: "form-control", placeholder: "Digite o seu nome completo", autofocus: true %>
         </div>
      </div>
      <div class="form-group">
         <div class="control-label col-sm-2">
            <%= f.label "Usuário" %>
         </div>
         <div class="col-sm-8">
            <%= f.text_field :username, class: "form-control", placeholder: "Digite o seu nome de usuário", autofocus: true %>
         </div>
      </div>
      <div class="form-group">
         <div class="control-label col-sm-2">
            <%= f.label "Email" %>
         </div>
         <div class="col-sm-8">
            <%= f.email_field :email, rows: 10, class: "form-control", placeholder: "Digite seu email" %>
         </div>
      </div>
      <div class="form-group">
         <div class="control-label col-sm-2">
            <%= f.label "Senha" %>
         </div>
         <div class="col-sm-8">
            <%= f.password_field :password, class: "form-control", placeholder: "Digite sua Senha" %>
         </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
           <%= f.label "Confirmar senha" %>
        </div>
        <div class="col-sm-8">
           <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirme sua senha" %>
        </div>
      </div>
      <div class="form-group">
         <div class="control-label col-sm-2">
            <%= f.label "address" %>
         </div>
         <div class="col-sm-8">
            <%= f.text_field :address, class: "form-control", placeholder: "Digite o seu endereço", autofocus: true %>
         </div>
      </div>
      <div class="form-group">
         <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit (@user.new_record? ? "Crie conta" : "Editar conta"), class: 'btn btn-primary btn-lg' %>
         </div>
      </div>
      <% end %>
      <div class="col-xs-4 col-xs-offset-4">
         [ <%= link_to "Cancelar e voltar", root_path %> ]
      </div>
   </div>
</div>
