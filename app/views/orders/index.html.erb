<h1>Pedidos de <%= @user.name %> </h1>
<table class = "table table-striped">
  <tr>
    <th>Id Pedido #</th>
    <th>Status</th>
    <th>Quantidade</th>
    <th>Total</th>
    <th>Ação</th>
  </tr>
  <% @orders.order('created_at').reverse_order.each do |order| %>
    <% if order.user_id == session[:user_id] %>
      <tr>
        <td> <%= link_to order.id, order_path(order.id) %> </td>
        <td> <%= order.status %> </td>
        <td> <%= order.quantity %> </td>
        <td> <%= order.subtotal %> </td>
        <td> <%= link_to "Cancelar pedido", order_path(order.id), :method => :delete, data: { confirm: 'Are you sure?' } %> </td>
      </tr>
    <% end %>
  <% end %>
</table>
