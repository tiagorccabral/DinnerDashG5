<h1>Pedidos de <%= @user.name %> </h1>
<table class = "table table-striped">
  <tr>
    <th>Status</th>
    <th>Quantidade</th>
    <th>Total</th>
  </tr>
  <% @orders.each do |order| %>
    <% if order.user_id == session[:user_id] %>
      <tr>
        <td> <%= order.Status %> </td>
        <td> <%= order.amount.to_i %> </td>
        <td> <%= order.value %> </td>
      </tr>
    <% end %>
  <% end %>
</table>
