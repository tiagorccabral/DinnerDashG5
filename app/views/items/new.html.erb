<h1 align = 'center'>New Item</h1>
<br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
<%= render 'shared/errors', obj: @item %>

<div class="signup-box">
  <div class="signup-box-content">
    <div class="row">
      <div class="col-xs-12">
        <%= form_for :item, :html => {class: "form-horizontal", role: "form"},  url: items_path do |f| %>
        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-1">
            <%= f.label :name %><br>
          </div>
          <div class="col-sm-10 col-sm-offset-1">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-1">
            <%= f.label :description %><br>
          </div>
          <div class="col-sm-10 col-sm-offset-1">
            <%= f.text_area :description, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-1">
            <%= f.label :categories %><br>
          </div>
          <div class="col-sm-10 col-sm-offset-1">
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
            <% end %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-1">
            <%= f.label :price %><br>
          </div>
          <div class="col-sm-10 col-sm-offset-1">
            <%= f.number_field :price, class: "form-control", :min => '0', :step => "0.01" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-1" align='center'>
            <%= f.submit class: "btn btn-primary btn-lg"%>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<br>
<br>
<div align='center'>
  <%= link_to 'Back', items_path, class: "btn btn-primary" %>
  <%= link_to 'Categorias', categories_path, class: "btn btn-primary" %>
  <%= link_to 'Items list', items_path, class: "btn btn-primary" %>
</div>
