<h1 align='center'>Editing item</h1>
<br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>




<div class="signup-box">
  <div class="signup-box-content">
    <div class="row">
      <div class="col-xs-12">
        <%= form_for :item, url: item_path(@item), :html => {class: "form-horizontal", role: "form"}, method: :patch do |f| %>

          <% if @item.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@item.errors.count, "error") %> prohibited
                this item from being saved:
              </h2>
              <ul>
                <% @item.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-1">
            <%= f.label :name %><br>
          </div>
          <div class="col-sm-10 col-sm-offset-1">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-1">
            <%= f.label :description %><br>
          </div>
          <div class="col-sm-10 col-sm-offset-1">
            <%= f.text_area :description, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-1">
            <%= f.label :categories %><br>
          </div>
          <div class="col-sm-10 col-sm-offset-1">
            <%= f.select :categories, Category.pluck(:name), class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-1">
            <%= f.label :price %><br>
          </div>
          <div class="col-sm-10 col-sm-offset-1">
            <%= f.number_field :price, class: "form-control", :min => '0', :step => "0.01" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-1" align='center'>
            <%= f.submit class: "btn btn-primary btn-lg"%>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div align='center'>
  <%= link_to 'Back', items_path, class:"btn btn-primary" %>
</div>
