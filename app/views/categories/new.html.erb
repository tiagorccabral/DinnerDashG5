<h1 align = 'center'>New Category</h1>
<br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>

<div class="signup-box">
  <div class="signup-box-content">
    <div class="row">
      <div class="col-xs-12">
        <%= form_for :category, :html => {class: "form-horizontal", role: "form"}, url: categories_path do |f| %>

        <% if @category.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@category.errors.count, "error") %> prohibited
              this category from being saved:
            </h2>
            <ul>
              <% @category.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-1">
            <%= f.label :name %><br>
          </div>
          <div class="col-sm-10 col-sm-offset-1">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-1" align='center'>
            <%= f.submit class: "btn btn-primary btn-lg"%>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div align='center'>
    <%= link_to 'Back', categories_path, class: "btn btn-primary" %>
</div>
